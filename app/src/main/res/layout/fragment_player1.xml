<?xml version="1.0" encoding="utf-8"?>

<!--Layout para el fragmento del jugador 1-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Player1Fragment">

<!--    LinearLayout para centralizar el contenido-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

<!--        TextView para mostrar el contador del jugador 1-->
        <TextView
            android:id="@+id/counterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="32sp"
            tools:ignore="HardcodedText" />

<!--        Boton para incrementar el contador del jugador 1-->
        <Button
            android:id="@+id/clickButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</FrameLayout>